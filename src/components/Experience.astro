const TAGS = {
  VisualBasic: {
    name: "VB",
    class: "bg-black text-white",
    icon: VisualBasic,
  },
  CSharp: {
    name: "C#",
    class: "bg-black text-white",
    icon: CSharp,
  },
  SQL: {
    name: "SQL",
    class: "bg-black text-white",
    icon: SQL,
  },
  DotNet: {
    name: ".NET",
    class: "bg-black text-white",
    icon: DotNet,
  },
