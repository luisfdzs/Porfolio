    icon: React,
  },
  NodeJS: {
    name: "Node.js",
    class: "bg-black text-white",
    icon: Mongo,
  },
  MongoDB: {
    name: "MongoDB",
    class: "bg-black text-white",
    icon: Node,
  },
};

const EXPERIENCE = [
  {
    title: "FullStack Engineer",
    company: "Exceltic - Grupo Ingeteam",
    date: "Marzo 2023 - Mayo 2024",
